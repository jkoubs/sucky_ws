<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="CoverageNavigation">
      <TransformAvailable child="base_link" parent="map"/>
      <!-- 1. Plan the path -->
      <ComputePathToPose goal="{goal}" path="{path}" planner_id="SpiralSTC"/>
      <!-- 2. Smooth the path -->
      <SmoothPath unsmoothed_path="{path}" smoothed_path="{path}" smoother_id="simple_smoother"/>
      <!-- 3. Follow the smoothed path -->
      <FollowPath path="{path}" controller_id="FollowPath" goal_checker_id="general_goal_checker"/>
      <GoalReached/>
    </Sequence>
  </BehaviorTree>
</root>