<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <SingleTrigger>
      <Sequence name="CoverageNavigation">
        <!-- 0. Checks if a TF transform is available -->
        <TransformAvailable child="base_link" parent="map"/>
        <!-- 1. Plan the path -->
        <RecoveryNode number_of_retries="2" name="PlannerRecovery">
          <ComputePathToPose goal="{goal}" path="{raw_path}" planner_id="SpiralSTC"/>
          <Wait wait_duration="1.0"/>
        </RecoveryNode>
        <!-- 2. Smooth the path -->
        <SmoothPath unsmoothed_path="{raw_path}" smoothed_path="{smoothed_path}" smoother_id="simple_smoother"/>
        <!-- 3. Follow the smoothed path -->
        <FollowPath path="{smoothed_path}" controller_id="FollowPath" goal_checker_id="general_goal_checker"/>
        <GoalReached/>
      </Sequence>
    </SingleTrigger>
  </BehaviorTree>
</root>